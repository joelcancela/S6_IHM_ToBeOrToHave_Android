<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_banner"
        android:layout_width="wrap_content"
        android:layout_height="244dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/home_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/home_banner_height"
        android:orientation="vertical"
        android:weightSum="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:columnCount="2"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/catalog_cardview"
                android:layout_width="160dp"
                android:layout_height="@dimen/cardview_home_height"
                android:layout_column="1"
                android:layout_row="0"
                app:cardUseCompatPadding="true" />

            <android.support.v7.widget.CardView
                android:id="@+id/stores_cardview"
                android:layout_width="160dp"
                android:layout_height="@dimen/cardview_home_height"
                android:layout_column="1"
                android:layout_row="1"
                app:cardUseCompatPadding="true">

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/shopping_list_cardview"
                android:layout_width="183dp"
                android:layout_height="@dimen/cardview_home_height"
                android:layout_column="0"
                android:layout_row="0"
                app:cardUseCompatPadding="true" />

            <android.support.v7.widget.CardView
                android:id="@+id/voucher_cardview"
                android:layout_width="184dp"
                android:layout_height="@dimen/cardview_home_height"
                android:layout_column="0"
                android:layout_row="1"
                app:cardUseCompatPadding="true">

            </android.support.v7.widget.CardView>

        </GridLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/fidelity_status"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cardUseCompatPadding="true" />

    </LinearLayout>

</FrameLayout>